@model IEnumerable<TrabalhoPos.Models.Produto>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <p>
        @Html.ActionLink("Adicionar", "Create")
    </p>
    <table>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProdutoID</td>
                <td>@p.Nome</td>
                <td>@p.Preco</td>
                <td>@p.Vendido</td>
                <td>@Html.ActionLink("Detalhes", "Detalhes", new { id = p.ProdutoID })</td>
            </tr>
        }
    </table>
</body>
</html>
